<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:background="@drawable/nav_back"
              android:gravity="center"
              android:orientation="vertical">

    <com.beardedhen.androidbootstrap.AwesomeTextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Loading..."
        android:textSize="18sp"
        app:bootstrapBrand="success"
        />


    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/avloadingIndicatorView1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:indicator="BallPulse"
        app:indicator_color="@color/colorPrimary"
        />

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/avloadingIndicatorView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:indicator="BallRotate"
        app:indicator_color="#ca4d4d"
        />

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/avloadingIndicatorView3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:indicator="BallClipRotateMultiple"
        app:indicator_color="#8da3d2"

        />

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/avloadingIndicatorView4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:indicator="BallTrianglePath"
        app:indicator_color="#681022"
        />

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/avloadingIndicatorView5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:indicator="BallScaleMultiple"
        app:indicator_color="#d4b131"

        />

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/avloadingIndicatorView6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:indicator="LineScalePulseOut"
        app:indicator_color="#7f9e54"

        />

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/avloadingIndicatorView7"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:indicator="BallSpinFadeLoader"
        app:indicator_color="#2ec9bd"
        />

</LinearLayout>