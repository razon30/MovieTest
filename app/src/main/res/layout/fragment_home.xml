<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="20dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:enabled="false"
                    app:bootstrapBrand="primary"
                    app:bootstrapText="{fa_file_movie_o}  Popular Movies"
                    app:roundedCorners="true"
                    app:showOutline="false"
                    app:bootstrapSize="lg"
                    android:layout_height="40dp"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="10dp"
                    android:paddingTop="8dp"
                    android:textColor="#212121"
                    android:textSize="20sp"
                    />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/home_movie_popular"
                android:layout_width="match_parent"
                android:layout_height="220dp">
            </android.support.v7.widget.RecyclerView>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:enabled="false"
                    app:bootstrapBrand="danger"
                    app:bootstrapText="{fa_male} Popular Person {fa_female}"
                    app:roundedCorners="true"
                    app:showOutline="false"
                    app:bootstrapSize="lg"
                    android:layout_height="40dp"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="10dp"
                    android:paddingTop="8dp"
                    android:textColor="#212121"
                    android:textSize="20sp"
                    />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/home_person_popular"
                    android:layout_width="match_parent"
                    android:layout_height="220dp">
                </android.support.v7.widget.RecyclerView>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:enabled="false"
                    app:bootstrapBrand="success"
                    app:bootstrapText="{fa_trophy} IMDB top TEN"
                    app:roundedCorners="true"
                    app:showOutline="true"
                    app:bootstrapSize="lg"
                    android:layout_height="40dp"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="10dp"
                    android:paddingTop="8dp"
                    android:textColor="#212121"
                    android:textSize="20sp"
                    />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/home_top_ten_imdb"
                    android:layout_width="match_parent"
                    android:layout_height="220dp">
                </android.support.v7.widget.RecyclerView>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:enabled="false"
                    app:bootstrapBrand="warning"
                    app:bootstrapText="{fa_thumbs_down}  IMDB bottom TEN"
                    app:roundedCorners="true"
                    app:showOutline="true"
                    app:bootstrapSize="lg"
                    android:layout_height="40dp"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="10dp"
                    android:paddingTop="8dp"
                    android:textColor="#212121"
                    android:textSize="20sp"
                    />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/home_bottom_ten_imdb"
                    android:layout_width="match_parent"
                    android:layout_height="220dp">
                </android.support.v7.widget.RecyclerView>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="10dp"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:enabled="false"
                    app:bootstrapBrand="primary"
                    app:bootstrapText="{fa_yelp} Movies By Genre"
                    app:roundedCorners="true"
                    app:showOutline="false"
                    app:bootstrapSize="lg"
                    android:layout_height="40dp"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="10dp"
                    android:paddingTop="8dp"
                    android:textColor="#212121"
                    android:textSize="20sp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ListView
                        android:id="@+id/search_genre_list1"
                        android:layout_width="0dp"
                        android:layout_height="350dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        />

                    <ListView
                        android:id="@+id/search_genre_list2"
                        android:layout_width="0dp"
                        android:layout_height="350dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        />

                    <ListView
                        android:id="@+id/search_genre_list3"
                        android:layout_width="0dp"
                        android:layout_height="350dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        />


                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>



    </LinearLayout>
</ScrollView>
